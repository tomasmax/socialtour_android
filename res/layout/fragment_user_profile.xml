<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SocialTourUserProfile$DummySectionFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/default_photo" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Nombre Apellido"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#cf0818" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:background="@drawable/bocadillo"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:text="Sobre mi:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lo que me gusta:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lo que no me gusta"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intereses"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/gradient_black"
        android:drawableRight="@drawable/profile_right_click"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:text="Opciones perfil"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/gradient_black"
        android:drawableRight="@drawable/profile_right_click"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:text="Planes realizados"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/gradient_black"
        android:drawableRight="@drawable/profile_right_click"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:text="Experiencias"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/gradient_black"
        android:drawableRight="@drawable/profile_right_click"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:text="Listas"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

</LinearLayout>